{
  "name": "emailauto",
  "version": "1.0.0",
  "type": "module",
  "description": "an email automation app",
  "main": "index.js",
  "scripts": {
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "lint": "eslint \"frontend/app/**/*.{ts,tsx}\" \"backend/src/**/*.{ts,tsx}\"",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "test": "jest",
    "prepare": "husky"
  },
  "author": "sanyog",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "concurrently": "^9.0.1"
  }
}
